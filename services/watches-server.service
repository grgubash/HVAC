[Unit]
Description=WATCHES Server
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=exec
ExecStart=/usr/bin/python3 -u /home/USERNAME/watches/python/watches_server.py
WorkingDirectory=/home/USERNAME/watches/python
Restart=always
User=USERNAME
KillSignal=SIGINT
Environment="DISPLAY=:0"
TimeoutSec=15

[Install]
WantedBy=graphical.target
