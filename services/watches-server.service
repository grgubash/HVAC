[Unit]
Description=WATCHES Server
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=exec
ExecStart=/home/ger/.pyenv/base/bin/python -m /home/ger/watches/python/watches_server
WorkingDirectory=/home/ger/watches/python
Restart=always
User=ger
KillSignal=SIGINT
Environment="DISPLAY=:0"
TimeoutSec=15

[Install]
WantedBy=graphical.target
