[Unit]
Description=WATCHES Server
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=exec
ExecStart=/usr/bin/python3 -u /home/senior/watches/python/watches_server.py
WorkingDirectory=/home/senior/watches/python
Restart=always
User=senior
KillSignal=SIGINT
Environment="DISPLAY=:0"
TimeoutSec=15
EnvironmentFile=/home/senior/.pyenv/base/lib/python3.11/site-packages

[Install]
WantedBy=graphical.target
